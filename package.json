{
  "name": "microscope-revised",
  "version": "1.0.0",
  "license": "ISC",
  "author": "Michael Tang <lctang@foxmail.com>",
  "description": "Revised edition of Microscope project originated from http://discovermeteor.com/",
  "repository": "github:mr-pajamas/microscope-revised",
  "scripts": {
    "start": "meteor run",
    "lint": "eslint .",
    "pretest": "meteor npm run lint --silent"
  },
  "dependencies": {
    "babel-runtime": "^6.26.0",
    "meteor-node-stubs": "^0.3.2",
    "bcrypt": "^1.0.3"
  },
  "devDependencies": {
    "@meteorjs/eslint-config-meteor": "^1.0.5",
    "babel-eslint": "^8.0.1",
    "eslint": "^4.12.1",
    "eslint-config-airbnb": "^15.1.0",
    "eslint-import-resolver-meteor": "^0.4.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jsx-a11y": "^5.1.1",
    "eslint-plugin-meteor": "^4.1.4",
    "eslint-plugin-react": "^7.5.1"
  },
  "eslintConfig": {
    "extends": "@meteorjs/eslint-config-meteor",
    "rules": {
      "no-unused-expressions": [
        "error",
        {
          "allowShortCircuit": true,
          "allowTernary": true
        }
      ],
      "no-restricted-syntax": [
        "error",
        "ForInStatement",
        "LabeledStatement",
        "WithStatement"
      ],
      "no-plusplus": [
        "error",
        {
          "allowForLoopAfterthoughts": true
        }
      ],
      "no-param-reassign": [
        "error",
        {
          "props": false
        }
      ]
    }
  }
}
